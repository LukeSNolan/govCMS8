{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}
{% import _self as menus %}

<div class="main-menu-wrapper">
    <a class="main-menu-mobile-link" href="javascript:void(0)"><span class="main-menu-mobile-icon"></span>Main Menu</a>          
    <div class="main-menu-items-wrapper">
{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0, false) }}

{% macro menu_links(items, attributes, menu_level, expand) %}
    {% import _self as menus %}
    {% if items %}
        {% set maxprintlevel = 1 %}
        {% set listclasses = [
            'menu',
            expand ? 'mobile-sub-menu-expanded',
        ] %}
        <ul{{ attributes.addClass(listclasses) }}>
        {% for item in items %}
            {% set classes = [
                'menu-item',
                item.is_expanded and menu_level < maxprintlevel ? 'menu-item--expanded',
                item.in_active_trail ? 'menu-item--active-trail',
            ] %}
            <li{{ item.attributes.addClass(classes) }}>
            {% if item.is_expanded and menu_level < maxprintlevel %}
                <div class="menu-item-wrapper">
            {% endif %}
            {{ link(item.title, item.url) }}
            {% if item.is_expanded and menu_level < maxprintlevel %}
                {% if item.in_active_trail %}
                    <span class="sub-menu-arrow" tabindex="0">∧</span>
                    {% set expand = TRUE %}
                {% else %}
                    <span class="sub-menu-arrow" tabindex="0">∨</span>
                {% endif %}
            </div>
            {% endif %}
            {% if item.below and menu_level < maxprintlevel %}
                {{ menus.menu_links(item.below, attributes, menu_level + 1, expand) }}
            {% endif %}
            </li>
        {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
    </div>
</div>